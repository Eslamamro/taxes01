<odoo>
<data>

    <record model="ir.ui.view" id="todo_form_view">
        <field name="name">task list</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_activity" type="object" class="btn-primary" string="Schedule" icon="fa-clock-o"/>
                    <field name="due_date"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                     <sheet>
    <h2>
        <field name="name" default_focus="1" placeholder="Enter the name"/>
    </h2>
    <hr/>

    <group>
        <group>
            <div class="o_group_title">
                <i class="fa fa-user"></i> Personal Info. - معلومات شخصيه
            </div>
            <field name="phone"/>
            <field name="state"/>
            <field name="Registered_E_invoicing"/>
            <field name="tax_id"/>
        </group>

        <group>
            <div class="o_group_title">
                <i class="fa fa-lock"></i> Credentials - أوراق اعتماد
            </div>
            <field name="username"/>
            <field name="email"/>
            <field name="password"/>
            <field name="password2"/>
        </group>
    </group>

    <group>
        <group>
            <div class="o_group_title">
                <i class="fa fa-building"></i> Egyptian Tax Authority - مصلحة الضرائب المصرية
            </div>
            <field name="is_2023"/>
            <div class="oe_button_box">
                <button name="action_redirect_to_taxes" type="object" string="Redirect" class="btn btn-link float-start">
                    Egyptian Tax Authority<i class="fa fa-arrow-right"></i>
                </button>
            </div>
        </group>

        <group>
            <div class="o_group_title">
                <i class="fa fa-percent"></i> Added Value - القيمة المضافة
            </div>
            <field name="registration_number"/>
            <field name="date"/>
            <div class="oe_button_box">
                <button name="action_redirect_to_invoices" type="object" string="Redirect" class="btn btn-link float-start">
                        Added value<i class="fa fa-arrow-right"></i>
                </button>
            </div>
        </group>
    </group>

    <group>
       <div class="o_group_title">
    <i class="fa fa-building"></i> E-invoicing - الفاتورة الإلكترونية
        </div>

        <field name="registration_company"/>
        <field name="token_pass"/>
        <field name="portal_request"/>
        <div class="oe_button_box">
            <button name="action_redirect_to_E_invoicing" type="object" string="Redirect" class="btn btn-link float-start">
                <i class="fa fa-arrow-right"></i>
            </button>
        </div>
    </group>
</sheet>

            </form>
        </field>
    </record>

        <record model="ir.ui.view" id="task_kanban_view">
            <field name="name">task.kanban</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-att-class="'o_kanban_record'">
                                <div class="o_kanban_primary_left">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_primary_right">
                                    <field name="state" decoration-info="state == 'in_progress'" decoration-success="state == 'done'" widget="badge" />
                                </div>
                                <div class="o_kanban_secondary">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record model="ir.ui.view" id="task_list">
        <field name="name">task list</field>
        <field name="model">task.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state" decoration-info="state == 'in_progress'" decoration-success="state == 'done'" widget="badge" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="due_date"/>
                <button name="mark_done" type="object" string="Finished" class="btn btn-link" icon="fa-check"/></list>
        </field>
    </record>


    <record model="ir.actions.act_window" id="todo_list_action_window">
        <field name="name">task</field>
        <field name="res_model">task.task</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <menuitem name="ToDo" id="todo_menu_2" parent="taxes01_menu_root"
        action="todo_list_action_window"/>


</data>
</odoo>
